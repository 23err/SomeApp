<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRepoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tv_repo_margin"
        android:text="@string/repo"
        android:textSize="@dimen/repo_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRepoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/tv_repo_margin"
        android:textSize="@dimen/repo_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tvRepoLabel"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toTopOf="@+id/tvRepoLabel"
        tools:text="asdf" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="tvRepoLabel,tvForkLabel" />

    <TextView
        android:id="@+id/tvForkLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tv_repo_margin"
        android:text="@string/fork"
        android:textSize="@dimen/repo_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRepoLabel" />

    <TextView
        android:id="@+id/tvFork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/tv_repo_margin"
        android:textSize="@dimen/repo_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tvForkLabel"
        app:layout_constraintStart_toEndOf="@+id/barrier"
        app:layout_constraintTop_toTopOf="@+id/tvForkLabel"
        tools:text="asdf" />
</androidx.constraintlayout.widget.ConstraintLayout>